<view class="container">

  <navigation-bar title="{{title}}" back="true"></navigation-bar>

  <!-- Questions -->
  <view class="content" wx:if="{{currentStep === 'questions'}}">
    <question-card question="{{questions[currentIndex].question}}" progress="{{progress}}">
      <view class="option-list">
        <view class="option-item" wx:for="{{questions[currentIndex].options}}" wx:key="index" data-index="{{index}}" bindtap="selectOption">
          {{item}}
        </view>
      </view>
    </question-card>
  </view>

  <!-- Height Input -->
  <view class="content" wx:if="{{currentStep === 'height'}}">
    <input-card 
      title="请输入您的身高" 
      placeholder="例如：175" 
      type="number" 
      progress="6/6"
      bindinput="onHeightInput"
      bindconfirm="onHeightConfirm"
    />
  </view>

  <!-- Income Input -->
  <view class="content" wx:if="{{currentStep === 'income'}}">
    <input-card 
      title="请输入您的月收入" 
      placeholder="例如：5000" 
      type="number" 
      progress="6/6"
      bindinput="onIncomeInput"
      bindconfirm="onIncomeConfirm"
    />
  </view>

  <view class="content" wx:if="{{finished}}">
    <view class="finish-card">
      <text class="finish-text">本测评完成！</text>

      <button class="back-btn" bindtap="goHome">返回主页</button>
    </view>
  </view>
</view>