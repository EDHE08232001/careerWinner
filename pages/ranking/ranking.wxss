.container {
  min-height: 100vh;
  background: #fff;
}

.content {
  padding: 20rpx;
  padding-top: 120rpx;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
}

.no-data-text {
  font-size: 48rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.no-data-subtext {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.back-btn {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.rankings {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.ranking-section {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid #e9ecef;
  position: relative;
}

.section-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #dee2e6;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.empty-section {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.reference-table {
  background: #fff;
  border-radius: 15rpx;
  margin-top: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.table-title {
  display: block;
  background: #f8f9fa;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  padding: 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #e9ecef;
}

.table-header {
  display: flex;
  background: #f1f3f4;
  border-bottom: 1rpx solid #e9ecef;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e9ecef;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 16rpx 12rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  border-right: 1rpx solid #e9ecef;
}

.table-cell:last-child {
  border-right: none;
}

.table-header .table-cell {
  font-weight: bold;
  color: #495057;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  background: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border: 1rpx solid #e9ecef;
  margin-bottom: 15rpx;
}

.rank-number {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(45deg, #ff6b6b, #ffa500);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.user-score {
  font-size: 28rpx;
  color: #666;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.detail-item {
  font-size: 24rpx;
  color: #999;
} 